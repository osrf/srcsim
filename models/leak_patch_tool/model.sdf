<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="leak_patch_tool">

    <link name="tool">

      <inertial>
        <pose>0 0.02 0.0 0 0 0</pose>
        <inertia>
          <ixx>0.0162</ixx>
          <iyy>0.0013</iyy>
          <izz>0.0162</izz>
        </inertia>
        <mass>2.0</mass>
      </inertial>

      <collision name="collision">
        <geometry>
          <mesh>
            <scale>0.04 0.04 0.04</scale>
            <uri>model://leak_patch_tool/meshes/leak_patch_tool.obj</uri>
            <submesh>
              <name>leak_patch_tool</name>
            </submesh>
          </mesh>
        </geometry>
        <surface>
          <contact>
            <ode>
              <kp>1e5</kp>
              <kd>1</kd>
              <max_vel>0.1</max_vel>
              <min_depth>0.0015</min_depth>
            </ode>
          </contact>
        </surface>
      </collision>

      <collision name="tip">
        <pose>0 0.242 0 1.57 0 0</pose>
        <geometry>
          <cylinder>
            <length>0.01</length>
            <radius>0.008</radius>
          </cylinder>
        </geometry>
        <surface>
          <contact>
            <ode>
              <kp>1e5</kp>
              <kd>1</kd>
              <max_vel>0.1</max_vel>
              <min_depth>0.0015</min_depth>
            </ode>
            <!-- Only collide with leak -->
            <collide_bitmask>0x10000</collide_bitmask>
          </contact>
        </surface>
      </collision>

      <visual name="visual">
        <geometry>
          <mesh>
            <scale>0.04 0.04 0.04</scale>
            <uri>model://leak_patch_tool/meshes/leak_patch_tool.obj</uri>
            <submesh>
              <name>leak_patch_tool</name>
            </submesh>
          </mesh>
        </geometry>
      </visual>

      <sensor name="tool_contact_sensor" type="contact">
        <contact>
          <collision>collision</collision>
        </contact>
      </sensor>

    </link>

    <link name="button">

      <inertial>
        <pose>0 0.114 0.0356 0 0 0</pose>
        <inertia>
          <ixx>0.0000257</ixx>
          <iyy>0.000025187</iyy>
          <izz>0.000040125</izz>
        </inertia>
        <mass>0.1</mass>
      </inertial>

      <collision name="collision">
        <geometry>
          <mesh>
            <scale>0.04 0.04 0.04</scale>
            <uri>model://leak_patch_tool/meshes/leak_patch_tool.obj</uri>
            <submesh>
              <name>leak_patch_tool_button</name>
            </submesh>
          </mesh>
        </geometry>
        <surface>
          <contact>
            <ode>
              <kp>1e5</kp>
              <kd>1</kd>
              <max_vel>0.1</max_vel>
              <min_depth>0.0015</min_depth>
            </ode>
          </contact>
        </surface>
      </collision>

      <visual name="visual">
        <geometry>
          <mesh>
            <scale>0.04 0.04 0.04</scale>
            <uri>model://leak_patch_tool/meshes/leak_patch_tool.obj</uri>
            <submesh>
              <name>leak_patch_tool_button</name>
            </submesh>
          </mesh>
        </geometry>
      </visual>

      <sensor name="button_contact_sensor" type="contact">
        <contact>
          <collision>collision</collision>
        </contact>
      </sensor>

    </link>

    <joint name="button_joint" type="prismatic">
      <pose>0 0 0 0 0 0</pose>
      <parent>tool</parent>
      <child>button</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
         <lower>-0.005</lower>
         <upper>0</upper>
        </limit>
        <dynamics>
          <damping>10</damping>
          <spring_stiffness>1000</spring_stiffness>
          <spring_reference>0</spring_reference>
        </dynamics>
      </axis>
    </joint>

    <plugin name="touch_valkyrie_patch" filename="libTouchPlugin.so">
      <sensor>tool_contact_sensor</sensor>
      <sensor>button_contact_sensor</sensor>
      <target>valkyrie</target>
      <time>0.5</time>
      <namespace>task3/checkpoint6</namespace>
    </plugin>

  </model>
</sdf>
