<%
  # Template for satellite model for SRC finals world
  # Version with visuals only

  # Requires the following global variables:
  # $satellite_frame

%>

<model name="VIS_satellite_dish">
  <static>true</static>

  <pose>
    <%= $satellite_frame[0, 2] %>
    <%= $satellite_frame[1, 2] %>
    0
    0
    0
    <%= Math::atan2($satellite_frame[1, 0], $satellite_frame[0, 0]) %>
  </pose>

  <link name="base">
    <visual name="visual">
      <geometry>
        <mesh>
          <uri>model://satellite_dish/meshes/satellite_dish.obj</uri>
          <submesh>
            <name>Base</name>
          </submesh>
          <scale>0.001 0.001 0.001</scale>
        </mesh>
      </geometry>
    </visual>
  </link>

  <link name="pivot">
    <pose>0 0 1.595 0 0 0</pose>
    <visual name="visual">
      <pose>0 0 -1.595 0 0 0</pose>
      <geometry>
        <mesh>
          <uri>model://satellite_dish/meshes/satellite_dish.obj</uri>
          <submesh>
            <name>Pivot</name>
          </submesh>
          <scale>0.001 0.001 0.001</scale>
        </mesh>
      </geometry>
    </visual>
  </link>

  <link name="dish">
    <pose>0 0 1.595 0.43 0 0</pose>
    <visual name="visual">
      <pose>0 -0.6519041 -1.451541 -0.43 0 0</pose>
      <geometry>
        <mesh>
          <uri>model://satellite_dish/meshes/satellite_dish.obj</uri>
          <submesh>
            <name>Dish</name>
          </submesh>
          <scale>0.001 0.001 0.001</scale>
        </mesh>
      </geometry>
    </visual>
  </link>

  <link name="wheel_yaw">
    <pose>-0.2 -1.725 0.91 0.52 0 0</pose>
    <visual name="visual">
      <pose>0.2 1.060 -1.64 -0.52 0 0</pose>
      <geometry>
        <mesh>
          <uri>model://satellite_dish/meshes/satellite_dish.obj</uri>
          <submesh>
            <name>Wheel_01</name>
          </submesh>
          <scale>0.001 0.001 0.001</scale>
        </mesh>
      </geometry>
    </visual>
  </link>

  <link name="wheel_pitch">
    <pose>0.2 -1.725 0.91 0.52 0 0</pose>
    <visual name="visual">
      <pose>-0.2 1.060 -1.64 -0.52 0 0</pose>
      <geometry>
        <mesh>
          <uri>model://satellite_dish/meshes/satellite_dish.obj</uri>
          <submesh>
            <name>Wheel_02</name>
          </submesh>
          <scale>0.001 0.001 0.001</scale>
        </mesh>
      </geometry>
    </visual>
  </link>

</model>
